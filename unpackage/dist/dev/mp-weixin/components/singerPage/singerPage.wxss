
.grid {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.item {
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}
.circle {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 1px solid #ddd;
}
.item-text {
  margin-top: 10rpx;
  font-size: 24rpx;
}
