	/* 歌单列表 */
.playlist-grid.data-v-1cf27b2a {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 20px;
		margin-bottom: 30px;
}
.playlist-card.data-v-1cf27b2a {
		background: rgba(255, 255, 255, 0.7);
		border-radius: 15px;
		overflow: hidden;
		transition: all 0.3s ease;
		-webkit-backdrop-filter: blur(10px);
		        backdrop-filter: blur(10px);
		box-shadow: 0 6px 15px rgba(158, 223, 126, 0.3);
}
.playlist-card.data-v-1cf27b2a:hover {
		transform: translateY(-5px);
		box-shadow: 0 12px 20px rgba(158, 223, 126, 0.4);
}
.playlist-img.data-v-1cf27b2a {
		width: 100%;
		height: 350rpx;
		aspect-ratio: 1;
		object-fit: cover;
}
.playlist-info.data-v-1cf27b2a {
		padding: 12px;
}
.playlist-name.data-v-1cf27b2a {
		font-weight: 600;
		margin-bottom: 5px;
		font-size: 15px; 
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
		color: #5e3a78;
}
.playlist-meta.data-v-1cf27b2a {
		color: #a67fb8;
		font-size: 12px;
		display: flex;
		justify-content: space-between;
}
.playlist-meta .playlist-i.data-v-1cf27b2a {
		color: #9cdf7e;
}

	/* 单曲推荐列表 */
.song-list.data-v-1cf27b2a {
		background: rgba(255, 255, 255, 0.7);
		border-radius: 15px;
		padding: 15px;
		margin-bottom: 30px;
		-webkit-backdrop-filter: blur(10px);
		        backdrop-filter: blur(10px);
		box-shadow: 0 6px 15px rgba(158, 223, 126, 0.3);
}
.song-item.data-v-1cf27b2a {
		display: flex;
		align-items: center;
